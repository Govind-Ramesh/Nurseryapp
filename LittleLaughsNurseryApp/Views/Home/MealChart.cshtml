@*@{
    ViewBag.Title = "MealChart";
}*@

@model LittleLaughsNurseryApp.Models.RatesAndTimings

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LittleLaughsNursery</title>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
</head>

<body>
    <div class="modal fade bd-meal-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                            <h4 class="modal-title">Meal chart</h4>
                            <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                   <div class="container">
                        <div class="row">
                                    <div class="col" style="background-color:#B6DAE0"><b>Days</b></div>
                                    <div class="col" style="background-color:#B6DAE0"><b>Breakfast</b></div>
                                    <div class="col" style="background-color:#B6DAE0"><b>Lunch</b></div>
                                    <div class="col" style="background-color:#B6DAE0"><b>Snacks</b></div>
                                    <div class="w-100"></div>
                            @foreach(var item in Model.mealDetails)
                            {
                                    
                                    <div class="col" style="background-color:#F2F2F2">@Html.DisplayFor(ModelItem=>item.Days)</div>
                                    <div class="col" style="background-color:#F2F2F2">@Html.DisplayFor(ModelItem=>item.Breakfast)</div>
                                    <div class="col" style="background-color:#F2F2F2">@Html.DisplayFor(ModelItem=>item.Lunch)</div>
                                    <div class="col" style="background-color:#F2F2F2">@Html.DisplayFor(ModelItem=>item.Snacks)</div>
                                    <div class="w-100"></div>
                            }
                      </div>
                   </div>
               </div>
           </div>
        </div>
    </div>


     </body>
    </html>
